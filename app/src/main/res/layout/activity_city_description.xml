<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".informations.citiesInformations.CityDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        android:layout_margin="8dp"
        android:id="@+id/mainContainerCity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cityDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/colorPrimaryDark"
            android:alpha="2.0"
            android:fontFamily="@font/tahoma_regular"
            android:gravity="center_horizontal"
            android:text="Dodaj relacjÄ™"
            android:textColor="@color/quantum_black_text"
            android:layout_marginBottom="0dp"
            android:textSize="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cityParagraphsLayout"
        android:orientation="vertical">
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityPhotosLayout"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/cityPhotos"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cityPhotosTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textColor="#000000" />
        </LinearLayout>
        </LinearLayout>
</ScrollView>
