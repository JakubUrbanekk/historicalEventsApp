<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#c67100"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/grid_spacer1"
        app:cardElevation="@dimen/grid_spacer1"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#c67100"
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/equipmentItemPhotoImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:visibility="gone"
                android:src="@drawable/noimge"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/equipmentItemNameTextView"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="8dp"
                    android:text="TextView"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/equipmentItemCategoryTextView"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:textColor="#000000"
                    android:text="TextView"
                    >
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/equipmentItemDescriptionTextView"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_margin="8dp"
                    android:text="TextView"
                    >
                </TextView>
            </LinearLayout>
            <ImageButton
                android:id="@+id/equipmentItemPopupMenu"
                android:layout_width="20dp"
                android:layout_marginEnd="8dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_more_vert_black_24dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_below="@+id/item_detail"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@null"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
